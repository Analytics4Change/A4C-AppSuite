# Kubernetes Secrets for Temporal API
#
# IMPORTANT: This is a template file. DO NOT commit the actual secrets.yaml file!
#
# Instructions:
# 1. Copy this file to secrets.yaml
# 2. Replace the placeholder values with actual base64-encoded secrets
# 3. Apply using: kubectl apply -f secrets.yaml
#
# To encode a secret:
#   echo -n "your-secret-value" | base64
#
# To decode a secret:
#   echo "encoded-value" | base64 -d

apiVersion: v1
kind: Secret
metadata:
  name: temporal-api-secrets
  namespace: temporal
  labels:
    app: temporal-api
    component: backend-api
type: Opaque
data:
  # Supabase URL (base64 encoded)
  # Example: echo -n "https://tmrjlswbsxmbglmaclxu.supabase.co" | base64
  SUPABASE_URL: "REPLACE_WITH_BASE64_ENCODED_SUPABASE_URL"

  # Supabase Service Role Key (base64 encoded)
  # This key has elevated permissions - keep it secure!
  # Example: echo -n "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..." | base64
  SUPABASE_SERVICE_ROLE_KEY: "REPLACE_WITH_BASE64_ENCODED_SERVICE_ROLE_KEY"

  # Supabase Anonymous Key (base64 encoded)
  # Example: echo -n "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..." | base64
  SUPABASE_ANON_KEY: "REPLACE_WITH_BASE64_ENCODED_ANON_KEY"

---
# Example of how to create the secret from command line (recommended for production):
#
# kubectl create secret generic temporal-api-secrets \
#   --namespace=temporal \
#   --from-literal=SUPABASE_URL="https://your-project.supabase.co" \
#   --from-literal=SUPABASE_SERVICE_ROLE_KEY="your-service-role-key" \
#   --from-literal=SUPABASE_ANON_KEY="your-anon-key"
#
# Or use GitHub Actions secrets (see Phase 4 in backend-api-implementation-status.md)
