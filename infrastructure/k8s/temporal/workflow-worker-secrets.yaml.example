---
# IMPORTANT: This is a template file. DO NOT commit the actual secrets file to git.
# Copy this file to workflow-worker-secrets.yaml and replace the base64-encoded values.
#
# To create base64-encoded values:
#   echo -n "your-actual-secret-value" | base64
#
# To apply the secret to the cluster:
#   kubectl apply -f workflow-worker-secrets.yaml

apiVersion: v1
kind: Secret
metadata:
  name: workflow-worker-secrets
  namespace: temporal
  labels:
    app: workflow-worker
    component: temporal-worker
type: Opaque
data:
  # Supabase service role key (base64-encoded)
  # Bypasses RLS for workflow activities
  # Example: echo -n "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..." | base64
  SUPABASE_SERVICE_ROLE_KEY: "REPLACE_WITH_BASE64_ENCODED_SERVICE_ROLE_KEY"

  # Cloudflare API token (base64-encoded)
  # Required for DNS provisioning activities
  # Example: echo -n "your-cloudflare-api-token" | base64
  CLOUDFLARE_API_TOKEN: "REPLACE_WITH_BASE64_ENCODED_CLOUDFLARE_TOKEN"

  # Resend API key (base64-encoded)
  # Primary email provider for invitation emails
  # Example: echo -n "re_xxxxxxxxxxxxxxxxxxxxxxxxxxxx" | base64
  RESEND_API_KEY: "REPLACE_WITH_BASE64_ENCODED_RESEND_KEY"

  # SMTP credentials (optional fallback email provider)
  # Only needed if Resend is unavailable or SMTP is preferred
  # SMTP_HOST: "REPLACE_WITH_BASE64_ENCODED_SMTP_HOST"
  # SMTP_PORT: "REPLACE_WITH_BASE64_ENCODED_SMTP_PORT"
  # SMTP_USER: "REPLACE_WITH_BASE64_ENCODED_SMTP_USER"
  # SMTP_PASS: "REPLACE_WITH_BASE64_ENCODED_SMTP_PASSWORD"
