---
# Kubernetes Secret for Workflow Worker Credentials
#
# ⚠️  DO NOT COMMIT THIS FILE WITH REAL CREDENTIALS!
# ⚠️  This is a TEMPLATE - copy to worker-secret.yaml and fill in real values
#
# To create the secret:
#   1. Copy this file: cp worker-secret.yaml.example worker-secret.yaml
#   2. Replace placeholder values with real credentials
#   3. Apply: kubectl apply -f worker-secret.yaml
#   4. Add worker-secret.yaml to .gitignore (already done)
#
# To encode values to base64:
#   echo -n "your-secret-value" | base64
#
apiVersion: v1
kind: Secret
metadata:
  name: workflow-worker-secrets
  namespace: temporal
  labels:
    app: workflow-worker
    component: temporal-worker
type: Opaque
data:
  # Supabase service role key (base64 encoded)
  # Get from: Supabase Dashboard → Settings → API → service_role key
  SUPABASE_SERVICE_ROLE_KEY: "eW91ci1zdXBhYmFzZS1zZXJ2aWNlLXJvbGUta2V5LWhlcmU="

  # Cloudflare API token (base64 encoded)
  # Get from: https://dash.cloudflare.com/profile/api-tokens
  # Required permissions: Zone:Read, DNS:Edit
  CLOUDFLARE_API_TOKEN: "eW91ci1jbG91ZGZsYXJlLWFwaS10b2tlbi1oZXJl"

  # Resend API key (base64 encoded)
  # Get from: https://resend.com/api-keys
  RESEND_API_KEY: "cmVfeHh4eHh4eHh4eHh4eHh4eHh4eHh4eHh4eA=="

  # Optional: SMTP credentials (if using SMTP instead of Resend)
  # SMTP_HOST: "c210cC5leGFtcGxlLmNvbQ=="
  # SMTP_PORT: "NTg3"
  # SMTP_USER: "eW91ci1zbXRwLXVzZXI="
  # SMTP_PASS: "eW91ci1zbXRwLXBhc3N3b3Jk"
