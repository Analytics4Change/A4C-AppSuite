# ========================================
# Environment Configuration Template
# Copy this file to .env.local and fill in your values
# All configuration is encrypted with git-crypt for security
# ========================================

# ========================================
# Authentication Configuration
# ========================================
# Zitadel Configuration - Get from your Zitadel instance
VITE_ZITADEL_INSTANCE_URL=https://your-instance.zitadel.cloud
VITE_ZITADEL_CLIENT_ID=your-client-id
VITE_ZITADEL_PROJECT_ID=your-project-id
VITE_ZITADEL_DEFAULT_ORG_ID=your-org-id

# Supabase Configuration - Get from your Supabase project
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key

# Auth mode: 'development' or 'production'
VITE_AUTH_MODE=development

# OAuth URLs (auto-configured in development mode)
VITE_AUTH_REDIRECT_URI=http://localhost:5173/auth/callback
VITE_AUTH_POST_LOGOUT_URI=http://localhost:5173

# ========================================
# Medication Search API Configuration
# ========================================
# Set to 'true' to use real RXNorm API, 'false' for mock data
VITE_USE_RXNORM_API=false

# RXNorm API Configuration (optional overrides)
# VITE_RXNORM_BASE_URL=https://rxnav.nlm.nih.gov
# VITE_RXNORM_TIMEOUT=30000

# Cache Configuration (optional)
# VITE_CACHE_MEMORY_TTL=1800000
# VITE_CACHE_INDEXEDDB_TTL=86400000
# VITE_CACHE_MAX_MEMORY_ENTRIES=100

# Circuit Breaker Configuration (optional)
# VITE_CIRCUIT_FAILURE_THRESHOLD=5
# VITE_CIRCUIT_RESET_TIMEOUT=60000

# Search Configuration (optional)
# VITE_SEARCH_MIN_LENGTH=2
# VITE_SEARCH_MAX_RESULTS=50
# VITE_SEARCH_DEBOUNCE_MS=300

# ========================================
# Organization / Multi-Tenant Configuration
# ========================================
# Set to 'true' to use mock organization service (development)
# Set to 'false' to use production Zitadel-based organization service
VITE_USE_MOCK_ORGANIZATION=true

# ========================================
# Debug Configuration (Development Only)
# ========================================
# VITE_DEBUG_AUTH=false
# VITE_DEBUG_MOBX=false
# VITE_DEBUG_PERFORMANCE=false