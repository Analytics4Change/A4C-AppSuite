{
    "version": "1.0",
    "description": "Skill activation triggers for A4C-AppSuite monorepo. Controls when skills automatically suggest based on file context and user prompts.",
    "skills": {
        "frontend-dev-guidelines": {
            "type": "domain",
            "enforcement": "suggest",
            "priority": "high",
            "description": "Guard rails for React/MobX reactivity, session management, CQRS queries, and WCAG 2.1 AA accessibility",
            "promptTriggers": {
                "keywords": [
                    "component",
                    "react component",
                    "ui component",
                    "interface",
                    "page",
                    "modal",
                    "dialog",
                    "form",
                    "button",
                    "input",
                    "radix",
                    "radix ui",
                    "tailwind",
                    "styling",
                    "css",
                    "mobx",
                    "observable",
                    "store",
                    "state management",
                    "accessibility",
                    "wcag",
                    "aria",
                    "keyboard navigation",
                    "screen reader",
                    "frontend",
                    "react",
                    "vite"
                ],
                "intentPatterns": [
                    "(create|add|make|build|implement).*?(component|UI|page|modal|dialog|form)",
                    "(update|modify|edit|refactor).*?(component|UI|page)",
                    "(style|design|layout).*?(component|UI)",
                    "(test|accessibility|a11y).*?(component|UI)",
                    "(how to|best practice).*?(component|react|radix|tailwind|mobx)"
                ]
            },
            "fileTriggers": {
                "pathPatterns": [
                    "frontend/src/**/*.tsx",
                    "frontend/src/**/*.ts"
                ],
                "pathExclusions": [
                    "**/*.test.tsx",
                    "**/*.test.ts",
                    "**/*.spec.tsx",
                    "**/*.spec.ts",
                    "**/vite.config.ts",
                    "**/tsconfig.json"
                ],
                "contentPatterns": [
                    "from 'react'",
                    "from \"react\"",
                    "from '@radix-ui",
                    "from \"@radix-ui",
                    "makeAutoObservable",
                    "observable",
                    "tailwind",
                    "className="
                ]
            }
        },
        "temporal-workflow-guidelines": {
            "type": "domain",
            "enforcement": "suggest",
            "priority": "high",
            "description": "Guard rails for Temporal.io workflow determinism, saga compensation, and event-driven activity patterns",
            "promptTriggers": {
                "keywords": [
                    "workflow",
                    "activity",
                    "temporal",
                    "orchestration",
                    "saga",
                    "compensation",
                    "determinism",
                    "deterministic",
                    "event",
                    "domain event",
                    "emit event",
                    "side effect",
                    "proxyActivities",
                    "worker",
                    "task queue"
                ],
                "intentPatterns": [
                    "(create|add|implement|build).*?(workflow|activity)",
                    "(update|modify|edit|refactor).*?(workflow|activity)",
                    "(fix|debug|handle).*?(workflow|temporal|activity)",
                    "(emit|create|handle).*?(event|domain event)",
                    "(how to|best practice).*?(workflow|activity|temporal|saga)",
                    "(test|debug).*?(workflow|activity)"
                ]
            },
            "fileTriggers": {
                "pathPatterns": [
                    "workflows/src/**/*.ts"
                ],
                "pathExclusions": [
                    "**/*.test.ts",
                    "**/*.spec.ts"
                ],
                "contentPatterns": [
                    "proxyActivities",
                    "defineWorkflow",
                    "startChild",
                    "Temporal\\.",
                    "@temporalio",
                    "workflow\\.",
                    "activity\\."
                ]
            }
        },
        "infrastructure-guidelines": {
            "type": "domain",
            "enforcement": "suggest",
            "priority": "high",
            "description": "Guard rails for Supabase SQL migrations, RLS policies, CQRS projections, and idempotent infrastructure patterns",
            "promptTriggers": {
                "keywords": [
                    "kubernetes",
                    "k8s",
                    "supabase",
                    "migration",
                    "sql",
                    "table",
                    "rls",
                    "row level security",
                    "policy",
                    "cqrs",
                    "projection",
                    "event store",
                    "domain events",
                    "trigger",
                    "idempotent",
                    "database",
                    "schema",
                    "deployment",
                    "manifest"
                ],
                "intentPatterns": [
                    "(create|add|write|implement).*?(migration|table|policy|trigger)",
                    "(update|modify|alter).*?(schema|table|migration)",
                    "(deploy|apply).*?(kubernetes|k8s|supabase)",
                    "(implement|update|create).*?(projection|cqrs|event.*?store)",
                    "(how to|best practice).*?(supabase|kubernetes|migration|rls)"
                ]
            },
            "fileTriggers": {
                "pathPatterns": [
                    "infrastructure/supabase/sql/**/*.sql",
                    "infrastructure/supabase/supabase/migrations/**/*.sql",
                    "infrastructure/k8s/**/*.yaml",
                    "infrastructure/k8s/**/*.yml"
                ],
                "pathExclusions": [],
                "contentPatterns": [
                    "CREATE TABLE",
                    "CREATE POLICY",
                    "CREATE TRIGGER",
                    "ALTER TABLE",
                    "rls_",
                    "domain_events",
                    "kind:",
                    "apiVersion:"
                ]
            }
        },
        "documentation-writing": {
            "type": "domain",
            "enforcement": "suggest",
            "priority": "medium",
            "description": "Guard rails for documentation quality: frontmatter, TL;DR format, AGENT-INDEX updates, and component prop documentation standards",
            "promptTriggers": {
                "keywords": [
                    "documentation",
                    "docs",
                    "document",
                    "readme",
                    "guide",
                    "template",
                    "agent-index",
                    "tl;dr",
                    "frontmatter"
                ],
                "intentPatterns": [
                    "(create|add|write|update).*?(documentation|doc|guide|readme)",
                    "(document|describe).*?(component|api|feature|architecture)"
                ]
            },
            "fileTriggers": {
                "pathPatterns": [
                    "documentation/**/*.md"
                ],
                "pathExclusions": [],
                "contentPatterns": [
                    "TL;DR-START",
                    "status: current",
                    "last_updated:",
                    "AGENT-INDEX"
                ]
            }
        }
    },
    "notes": {
        "enforcement_types": {
            "suggest": "Skill suggestion appears but doesn't block execution",
            "block": "Requires skill to be used before proceeding (guardrail)",
            "warn": "Shows warning but allows proceeding"
        },
        "priority_levels": {
            "critical": "Highest - Always trigger when matched",
            "high": "Important - Trigger for most matches",
            "medium": "Moderate - Trigger for clear matches",
            "low": "Optional - Trigger only for explicit matches"
        },
        "customization": {
            "a4c_appsuite": "This file is customized for the A4C-AppSuite monorepo structure",
            "tech_stack": "Reflects actual tech choices: Radix UI (not MUI), Tailwind, MobX, Temporal, Supabase",
            "file_paths": "Matches frontend/, workflows/, infrastructure/ monorepo structure"
        }
    }
}
